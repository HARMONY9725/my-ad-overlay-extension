{
  "manifest_version": 3,
  "name": "Ad Overlay Demo",
  "version": "1.0",
  "description": "広告領域の上に画像オーバーレイを重ねるデモ（削除はしない）",
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "images/overlay-sample.png"
  }
}
